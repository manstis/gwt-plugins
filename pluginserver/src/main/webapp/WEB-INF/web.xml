<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<display-name>gwt-plugins-server</display-name>

	<!-- Servlets -->
	<servlet>
		<servlet-name>service</servlet-name>
		<servlet-class>com.anstis.pluginserver.server.ServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>service</servlet-name>
		<url-pattern>/com.anstis.pluginserver.Server/service</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>PluginServer.html</welcome-file>
	</welcome-file-list>

</web-app>
