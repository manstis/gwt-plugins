<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>echo</servlet-name>
    <servlet-class>com.anstis.pluginserver.server.EchoServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>echo</servlet-name>
    <url-pattern>/com.anstis.pluginserver.Server/echo</url-pattern>
  </servlet-mapping>
  
    <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>PluginServer.html</welcome-file>
  </welcome-file-list>
  
</web-app>
